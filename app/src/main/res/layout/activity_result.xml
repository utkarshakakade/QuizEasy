<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView

        android:layout_width="200dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#534E4E"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        app:cardCornerRadius="15sp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:text="Result"
            android:fontFamily="@font/font10"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15sp"
            >
    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/marks"
        android:layout_width="wrap_content"
        android:text="10/10"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/checkquestions"
        android:layout_margin="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CFC7C7"
        android:textColor="@color/black"
        android:text="Low Score!!Wanna Check Answers Click Here"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Take the Quiz Again"
        android:fontFamily="@font/font10"
        android:backgroundTint="@color/black"
        />
    <Button
        android:id="@+id/homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Go to Home Page"
        android:fontFamily="@font/font10"
        android:backgroundTint="@color/black"
        />
</LinearLayout>